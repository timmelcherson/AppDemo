<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="0dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_item_card_bg"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="16dp">

        <!--<ImageView
            android:id="@+id/image_item_src"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/picker_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of entry"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/picker_item_paragraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Some additional information or numbers"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/picker_item_title"
            app:layout_constraintTop_toBottomOf="@+id/picker_item_title" />

        <TextView
            android:id="@+id/picker_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Type: special-attribute-123"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/picker_item_paragraph"
            app:layout_constraintTop_toBottomOf="@+id/picker_item_paragraph" />

        <TextView
            android:id="@+id/picker_item_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/picker_item_type"
            app:layout_constraintTop_toTopOf="@+id/picker_item_type"
            app:layout_constraintTop_toBottomOf="@+id/picker_item_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
